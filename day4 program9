Camel Case

  #include <stdio.h>

int main() {
    char str[200], ch;
    int i = 0, capitalize = 1;

    while ((ch = getchar()) != '\n' && ch != EOF) {
        if (ch == ' ') {
            capitalize = 1;
        } else {
            if (capitalize && ch >= 'a' && ch <= 'z') {
                str[i++] = ch - 32;
                capitalize = 0;
            } else if (capitalize && ch >= 'A' && ch <= 'Z') {
                str[i++] = ch;
                capitalize = 0;
            } else {
                str[i++] = ch;
            }
        }
    }

    str[i] = '\0';
    printf("%s\n", str);
    return 0;
}

Alternating Code

  #include <stdio.h>

int main() {
    char s[101];
    int i, len = 0;
    char ch;
    
    while ((ch = getchar()) != '\n' && ch != EOF) {
        s[len++] = ch;
    }
    s[len] = '\0';

    if (len < 2) {
        printf("No\n");
        return 0;
    }

    char a = s[0], b = s[1];
    if (a == b) {
        printf("No\n");
        return 0;
    }

    for (i = 0; i < len; i++) {
        if (i % 2 == 0 && s[i] != a) {
            printf("No\n");
            return 0;
        }
        if (i % 2 == 1 && s[i] != b) {
            printf("No\n");
            return 0;
        }
    }

    printf("Yes\n");
    return 0;
}

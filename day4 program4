Count the vowels

  #include <stdio.h>

int isVowel(char ch) {
    ch = (ch >= 'A' && ch <= 'Z') ? ch + 32 : ch;
    return ch == 'a' || ch == 'e' || ch == 'i' || ch == 'o' || ch == 'u';
}

int main() {
    char ch;
    int count = 0;

    while ((ch = getchar()) != '\n' && ch != EOF) {
        if (isVowel(ch))
            count++;
    }

    printf("%d\n", count);
    return 0;
}

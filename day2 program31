Decimal to Binary Converter 4

  #include <stdio.h>

void printBinary(int n) {
    if (n > 1) {
        printBinary(n / 2);
    }
    printf("%d", n % 2);
}

int main() {
    int number;
    scanf("%d", &number);

    printf("Binary number is: ");
    if (number == 0) {
        printf("0");
    } else {
        printBinary(number);
    }
    printf("\n");

    return 0;
}

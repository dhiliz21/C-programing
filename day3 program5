Product and Mean of the array

  #include <stdio.h>

int main() {
    int n;
    scanf("%d", &n);
    int a[n];
    float product = 1, sum = 0;

    for (int i = 0; i < n; i++) {
        scanf("%d", &a[i]);
        product *= a[i];
        sum += a[i];
    }

    float mean = sum / n;

    printf("Product of the array:%.2f\n", product);
    printf("Mean of the array:%.3f\n", mean);

    return 0;
}

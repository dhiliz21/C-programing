Shape Calculation-Perimeter

#include <stdio.h>
#define PI 3.14159

int main() {
    int side, length, width;
    float radius;
    int base1, side2, base2;
    scanf("%d", &side);
    scanf("%d", &length);
    scanf("%d", &width);
    scanf("%f", &radius);
    scanf("%d", &base1);
    scanf("%d", &side2);
    scanf("%d", &base2);
    int squarePerimeter = 4 * side;
    int rectanglePerimeter = 2 * (length + width);
    float circlePerimeter = 2 * PI * radius;
    int trianglePerimeter = base1 + side2 + base2;
    printf("Perimeter of Square:%d\n", squarePerimeter);
    printf("Perimeter of Rectangle:%d\n", rectanglePerimeter);
    printf("Perimeter of Circle:%.2f\n", (int)(circlePerimeter * 100) / 100.0);
    printf("Perimeter of Triangle:%d\n", trianglePerimeter);
    return 0;
}
